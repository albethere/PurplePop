<?xml version="1.0" encoding="UTF-8"?>

<channel name="xfce4-panel" version="1.0">
  <property name="panels" type="array">
    <value type="int" value="1"/>
    <property name="panel-1" type="empty">
      <property name="position" type="string" value="p=6;x=0;y=0"/>
      <property name="length" type="uint" value="100"/>
      <property name="size" type="uint" value="30"/>
      <property name="autohide" type="uint" value="0"/>
      <property name="mode" type="uint" value="0"/>
      <property name="plugin-ids" type="array">
        <value type="int" value="1"/>   <!-- Whisker menu -->
        <value type="int" value="2"/>   <!-- Window buttons -->
        <value type="int" value="3"/>   <!-- Separator -->
        <value type="int" value="4"/>   <!-- Notification area -->
        <value type="int" value="5"/>   <!-- Pulseaudio plugin -->
        <value type="int" value="6"/>   <!-- Clock -->
      </property>
    </property>
  </property>

  <property name="plugins" type="map">
    <!-- Whisker menu -->
    <property name="plugin-1" type="empty">
      <property name="plugin-name" type="string" value="whiskermenu"/>
      <property name="button-title" type="string" value="PurplePop"/>
      <property name="button-icon-name" type="string" value="start-here"/>
    </property>

    <!-- Window buttons -->
    <property name="plugin-2" type="empty">
      <property name="plugin-name" type="string" value="tasklist"/>
      <property name="show-handle" type="bool" value="false"/>
    </property>

    <!-- Separator -->
    <property name="plugin-3" type="empty">
      <property name="plugin-name" type="string" value="separator"/>
      <property name="expand" type="bool" value="true"/>
      <property name="style" type="uint" value="0"/>
    </property>

    <!-- Notification area -->
    <property name="plugin-4" type="empty">
      <property name="plugin-name" type="string" value="systray"/>
    </property>

    <!-- Pulseaudio plugin -->
    <property name="plugin-5" type="empty">
      <property name="plugin-name" type="string" value="pulseaudio"/>
    </property>

    <!-- Clock -->
    <property name="plugin-6" type="empty">
      <property name="plugin-name" type="string" value="clock"/>
      <property name="digital-layout" type="uint" value="3"/>
      <property name="digital-time-format" type="string" value="%Y-%m-%d %H:%M"/>
    </property>
  </property>
</channel>
